generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model User {
  discordId Int  @id
  email     String
  orders    Order[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Template {
  id Int @id @default(autoincrement())
  name String
  url String
  marques Marque[]
}

model Marque {
  id  Int @id @default(autoincrement())
  name String
  orders  Order[]
  template Template @relation(fields: [templateId],references: [id])
  templateId Int
}

model Answer {
  id Int @id @default(autoincrement())
  key String @unique
  value String
  order Order @relation(fields: [orderId],references: [id])
  orderId Int
}

model ArticleQuestion {
  id Int @id @default(autoincrement())
  text String
  forKey String @unique
}

model BillingInfoQuestion {
  id Int @id @default(autoincrement())
  text String
  forKey String @unique
}

model Order {
  id Int @id @default(autoincrement())
  emailAdressee String?
  answers Answer[]
  marque Marque @relation(fields: [marqueId], references: [id])
  user User @relation(fields: [userId],references: [discordId])
  userId Int
  marqueId Int
}

